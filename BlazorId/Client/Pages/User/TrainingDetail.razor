@page "/trainingDetail/{SId}"
@inject NavigationManager NavigationManager
@using BlazorId.Shared;

<h3>Training Detail</h3>
@if (courses == null)
{
    <p><em>Chargement...</em></p>
}
else
{
    <p>@training!.Detail</p>
    <div class="container-fluid">
        <div class="row">
            @foreach (Course course in courses!)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <p>Begin: @course.StartDate.ToShortDateString()</p>
                            <p>End: @course.EndDate.ToShortDateString()</p>
                            <p>
                                City: @course.Classroom!.User!.ZipCode
                                @course.Classroom.User.City
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public string? sId { get; set; }
    [Inject]
    private IHttpAnonymousClientFactory client { get; set; }

    private Training? training;
    private List<Course>? courses;

    protected override async Task OnInitializedAsync()
    {
        training = await client.HttpClient.GetFromJsonAsync<Training>("api/Trainings/" + sId);
        courses = await client.HttpClient.GetFromJsonAsync<List<Course>>("api/Courses/" + sId);
    }    
}
